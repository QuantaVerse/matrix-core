{
    "name": "matrix-core",
    "version": "0.0.1",
    "description": "Core backend service for Matrix application",
    "author": "Pritam Sarkar",
    "private": false,
    "license": "GPL-3.0-or-later",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
        "lint": "eslint '{src,apps,libs,test}/**/*.ts'",
        "lint:fix": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "migration:generate": "ts-node node_modules/typeorm/cli.js migration:generate -f ormconfig -d src/migrations -n",
        "migration:revert": "ts-node node_modules/typeorm/cli.js migration:revert -f ormconfig",
        "migration:create": "ts-node node_modules/typeorm/cli.js migration:create -f ormconfig -d src/migrations -n",
        "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run -f ormconfig",
        "schema:drop": "ts-node node_modules/typeorm/cli.js schema:drop -f ormconfig",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "engines": {
        "node": ">=14.15.0",
        "npm": ">=6.14.0"
    },
    "dependencies": {
        "@nestjs/common": "^7.0.0",
        "@nestjs/core": "^7.0.0",
        "@nestjs/cqrs": "7.0.1",
        "@nestjs/mapped-types": "0.1.1",
        "@nestjs/platform-express": "^7.0.0",
        "@nestjs/platform-fastify": "7.5.4",
        "@nestjs/swagger": "4.7.5",
        "@nestjs/typeorm": "7.1.5",
        "bunyan": "1.8.14",
        "bunyan-format": "0.2.1",
        "class-transformer": "0.3.1",
        "class-validator": "0.12.2",
        "dotenv": "8.2.0",
        "fastify-helmet": "5.0.3",
        "fastify-rate-limit": "4.1.0",
        "fastify-swagger": "3.5.0",
        "morgan": "1.10.0",
        "pg": "8.5.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.5.4",
        "typeorm": "0.2.29"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.0.0",
        "@nestjs/schematics": "^7.0.0",
        "@nestjs/testing": "^7.0.0",
        "@types/express": "^4.17.3",
        "@types/jest": "26.0.10",
        "@types/node": "^13.9.1",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "3.9.1",
        "@typescript-eslint/parser": "3.9.1",
        "eslint": "7.7.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-simple-import-sort": "6.0.1",
        "husky": "4.3.5",
        "jest": "26.4.2",
        "lint-staged": "10.5.3",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2",
        "ts-jest": "26.2.0",
        "ts-loader": "^6.2.1",
        "ts-node": "9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.7.4"
    },
    "lint-staged": {
        "{src,test}/**/*.{js,ts}": [
            "npm run format",
            "npm run lint",
            "git add ."
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/QuantaVerse/matrix-core.git"
    },
    "keywords": [
        "matrix"
    ],
    "bugs": {
        "url": "https://github.com/QuantaVerse/matrix-core/issues"
    },
    "homepage": "https://github.com/QuantaVerse/matrix-core#readme",
    "volta": {
        "node": "14.15.3",
        "npm": "6.14.10"
    }
}
